# DB Common Credentials
COMMON_DB_USER=testuser
COMMON_DB_PASSWORD=testpass

# keycloak admin credentials
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin1234

# Keycloak
KEYCLOAK_HOST_NAME=host.docker.internal
KEYCLOAK_USER_REALM=kajz

# Redis
REDIS_PASSWORD=redis1234

# Pgadmin
PGADMIN_DEFAULT_EMAIL=admin@test.com
PGADMIN_DEFAULT_PASSWORD=YOUR_PGADMIN_PASS

# DB NAMES
KEYCLOAK_DB_NAME=keycloakdb
NOTIFICATION_DB_NAME=notificationdb
STORAGE_DB_NAME=storagedb

# DB HOST PORTS
KEYCLOAK_DB_HOST_PORT=5433
NOTIFICATION_DB_HOST_PORT=5434
STORAGE_DB_HOST_PORT=5435

# APPLICATION PORTS
KEYCLOAK_HOST_PORT=8444
API_GATEWAY_HOST_PORT=8443
DISCOVERY_SERVER_HOST_PORT=8761
AUTH_SERVICE_HOST_PORT=8081
NOTIFICATION_SERVICE_HOST_PORT=8082
STORAGE_SERVICE_HOST_PORT=8083

# Eureka Client Configuration
EUREKA_CLIENT_SERVICEURL_DEFAULTZONE=http://service-registry:8761/eureka/

# Storage Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=your_aws_region
AWS_S3_BUCKET_NAME=your_s3_bucket_name
# # Set these if using Azure Blob Storage
# AZURE_BLOB_CONNECTION_STRING=your_azure_storage_account_connection_string
# AZURE_BLOB_CONTAINER_NAME=your_blob_container_name

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID_HERE
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN_HERE
TWILIO_PHONE_NUMBER=YOUR_TWILIO_PHONE_NUMBER_HERE

# Email Configuration
EMAIL_PROVIDER=SMTP_BASIC # Other Options: GMAIL, MICROSOFT
EMAIL_SMTP_USERNAME=YOUR_SMTP_USERNAME_HERE
EMAIL_SMTP_PASSWORD=YOUR_SMTP_PASSWORD_HERE
EMAIL_SMTP_HOST=YOUR_SMTP_HOST_HERE # e.g., smtp.gmail.com
EMAIL_SMTP_PORT=YOUR_SMTP_PORT_HERE # e.g., 587
EMAIL_SENDER_ADDRESS=YOUR_FROM_EMAIL_ADDRESS_HERE

# MISC
